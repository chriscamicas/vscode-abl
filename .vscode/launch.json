// A launch configuration that launches the extension inside a new window
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension - Workspace",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}", "run_env/sample-oe-projects"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "preLaunchTask": "npm: webpack"
        },
        {
            "name": "Run Extension - Sample project 1",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}", "run_env/sample-oe-projects/project1"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "preLaunchTask": "npm: webpack"
        },
        {
            "name": "Run Extension - SonarTestProject",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}", "C:\\Users\\gquer\\projets\\sonaroe-test-project"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "preLaunchTask": "npm: webpack"
        },
        {
            "name": "Run Extension - GPAO",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}", "C:\\Users\\gquer\\projets\\customers\\hachette\\App-GPAO"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "preLaunchTask": "npm: webpack"
        },
        {
            "name": "Run Extension - Consultingwerk",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}", "C:\\Work_STREAM\\SmartComponentLibrary\\Develop125\\Develop125.code-workspace"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "preLaunchTask": "npm: webpack"
        },
        {
            "name": "Launch as server",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "program": "${workspaceFolder}/dist/ablDebug.js",
            "args": [
                "--server=4712"
            ],
            "sourceMaps": true,
			"preLaunchTask": "npm: webpack"
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            // the workspace path should be GOPATH
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: webpack"
        }
    ],
    "compounds": [
        {
            "name": "Extension + Debug server",
            "configurations": [
                "Run Extension - Sample project 1",
                "Launch as server"
            ]
        }
    ]
}