{
    "name": "openedge-abl",
    "publisher": "chriscamicas",
    "version": "1.2.1",
    "description": "OpenEdge ABL language support for VS Code.",
    "displayName": "OpenEdge ABL",
    "author": "chriscamicas",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/chriscamicas/vscode-abl.git"
    },
    "bugs": {
        "url": "https://github.com/chriscamicas/openedge-abl-syntax/issues"
    },
    "scripts": {
        "package": "vsce package",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test": "mocha -u tdd ./out/test",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
    },
    "icon": "resources/images/progress_icon.png",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Debuggers",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:abl",
        "onDebug"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "abl",
                "aliases": [
                    "OpenEdge ABL",
                    "abl",
                    "Progress",
                    "Progress 4GL"
                ],
                "extensions": [
                    ".w",
                    ".p",
                    ".i",
                    ".cls"
                ],
                "configuration": "./resources/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "abl",
                "scopeName": "source.abl",
                "path": "./resources/abl.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "abl",
                "path": "./resources/abl.json"
            }
        ],
        "commands": [
            {
                "command": "abl.run.currentFile",
                "title": "ABL: Run",
                "description": "Run the current .p file"
            },
            {
                "command": "abl.checkSyntax",
                "title": "ABL: CheckSyntax",
                "description": "Check the syntax for the current .p file"
            },
            {
                "command": "abl.test",
                "title": "ABL: Test",
                "description": "Run all UnitTest"
            },
            {
                "command": "abl.test.currentFile",
                "title": "ABL: Test current file",
                "description": "Run current UnitTest file"
            },
            {
                "command": "abl.dictionary.dumpDefinition",
                "title": "ABL: Read Dictionary Structure",
                "description": "Read the DataDictionary structure for further use"
            },
            {
                "command": "abl.propath",
                "title": "ABL: Current PROPATH",
                "description": "See the currently set PROPATH."
            },
            {
                "command": "abl.dataDictionary",
                "title": "ABL: Open DataDictionary",
                "description": "Open the DataDictionary external tool"
            }
        ],
        "breakpoints": [
            {
                "language": "abl"
            }
        ],
        "debuggers": [
            {
                "type": "abl",
                "label": "ABL",
                "program": "./dist/ablDebug.js",
                "runtime": "node",
                "languages": [
                    "abl"
                ],
                "configurationSnippets": [
                    {
                        "label": "ABL: Attach",
                        "description": "Attach to a debug-ready process",
                        "body": {
                            "name": "${2:Attach to process}",
                            "type": "abl",
                            "request": "attach",
                            "address": "TCP/IP address of process to be debugged",
                            "port": 3099,
                            "localRoot": "^\"\\${workspaceFolder}\"",
                            "remoteRoot": "path to remote files",
                            "sourceMap": {
                                "Z:\\\\path\\\\to\\\\remote\\\\files\\\\**": "c:\\\\path\\\\to\\\\local\\\\src\\\\**"
                            }
                        }
                    },
                    {
                        "label": "ABL: Launch Program",
                        "description": "Debug the current file",
                        "body": {
                            "name": "${2:Launch program}",
                            "type": "abl",
                            "request": "launch",
                            "program": "^\"${1:\\${file}}\"",
                            "cwd": "^\"\\${workspaceFolder}\""
                        }
                    }
                ],
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop the program at the first line executed.",
                                "default": false
                            },
                            "port": {
                                "type": "number",
                                "description": "The port that the debugger will be listening on.",
                                "default": 3099
                            },
                            "program": {
                                "type": "string",
                                "description": "The program to start.",
                                "default": "${file}"
                            },
                            "cwd": {
                                "type": "string",
                                "description": "The working directory.",
                                "default": "${workspaceFolder}"
                            },
                            "sourceMap": {
                                "type": "object",
                                "description": "source mapping for remote debugging",
                                "default": {
                                    "Z:\\path\\to\\remote\\files\\**": "c:\\path\\to\\local\\src\\**"
                                }
                            }
                        }
                    },
                    "attach": {
                        "required": [
                            "address",
                            "port"
                        ],
                        "properties": {
                            "port": {
                                "type": "number",
                                "description": "The port that the debugger will be listening on.",
                                "default": 3099
                            },
                            "address": {
                                "type": "string",
                                "description": "The remote address the debugger will connect to.",
                                "default": "127.0.0.1"
                            },
                            "localRoot": {
                                "type": "string",
                                "description": "The root directory for local source",
                                "default": "${workspaceFolder}"
                            },
                            "remoteRoot": {
                                "type": "string",
                                "description": "The root directory for remote source",
                                "default": ""
                            },
                            "sourceMap": {
                                "type": "object",
                                "description": "source mapping for remote debugging",
                                "default": {
                                    "Z:\\path\\to\\remote\\files\\**": "c:\\path\\to\\local\\src\\**"
                                }
                            }
                        }
                    }
                }
            }
        ],
        "configuration": {
            "type": "object",
            "title": "ABL configuration",
            "properties": {
                "abl.checkSyntaxOnSave": {
                    "type": "string",
                    "enum": [
                        "file",
                        "workspace",
                        "off"
                    ],
                    "default": "file",
                    "description": "On save, check the syntax fot eh current file, the workspace, or nothing at all."
                },
                "abl.editorContextMenuCommands": {
                    "type": "object",
                    "properties": {
                        "checkSyntax": {
                            "type": "boolean",
                            "default": true,
                            "description": "If true, adds command to check syntax to the editor context menu"
                        }
                    }
                },
                "abl.useProcedureEditorKeyBindings": {
                    "type": "boolean",
                    "default": true,
                    "description": "If true, use the same shortcuts as the Progress Procedure Editor (F2, Shift+F2, ...)"
                },
                "abl.warnConfigFile": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show a warning message if config file not found"
                },
                "abl.checkProgressBinary": {
                    "type": "boolean",
                    "default": true,
                    "description": "Check if Progress binaries are accessible"
                },
                "abl.configuration.runtimes": {
                    "type": "array",
                    "description": "Map OpenEdge Execution Environments to local installation",
                    "items": {
                        "type": "object",
                        "default": {},
                        "required": [
                            "path",
                            "name"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "enum": [
                                    "9.1E",
                                    "10.2B",
                                    "11.5",
                                    "11.6",
                                    "11.7",
                                    "12.2",
                                    "12.4",
                                    "ESAP"
                                ],
                                "description": "OpenEdge Execution Environment name. Must be unique."
                            },
                            "path": {
                                "type": "string",
                                "pattern": ".*(?<!\\/bin|\\/bin\\/|\\\\bin|\\\\bin\\\\)$",
                                "description": "OpenEdge home directory.\n On Windows, backslashes must be escaped, i.e.\n\"path\":\"C:\\\\Progress\\\\OpenEdge-12.2\"."
                            },
                            "default": {
                                "type": "boolean",
                                "description": "Is default runtime? Only one runtime can be default."
                            }
                        },
                        "additionalProperties": false
                    },
                    "default": [],
                    "scope": "machine"
                }
            }
        },
        "menus": {
            "editor/context": [
                {
                    "when": "editorTextFocus && config.abl.editorContextMenuCommands.checkSyntax && resourceLangId == abl",
                    "command": "abl.checkSyntax",
                    "group": "ABL group 1"
                }
            ],
            "commandPalette": [
                {
                    "command": "abl.run.currentFile",
                    "when": "editorLangId == 'abl'"
                },
                {
                    "command": "abl.checkSyntax",
                    "when": "editorLangId == 'abl'"
                },
                {
                    "command": "abl.test",
                    "when": "editorLangId == 'abl'"
                },
                {
                    "command": "abl.test.currentFile",
                    "when": "editorLangId == 'abl'"
                }
            ]
        },
        "jsonValidation": [
            {
                "fileMatch": ".openedge.json",
                "url": "./resources/openedge.schema.json"
            }
        ],
        "keybindings": [
            {
                "when": "editorTextFocus && config.abl.useProcedureEditorKeyBindings && resourceLangId == abl",
                "command": "abl.checkSyntax",
                "key": "Shift+F2"
            },
            {
                "when": "editorTextFocus && config.abl.useProcedureEditorKeyBindings && resourceLangId == abl",
                "command": "abl.run.currentFile",
                "key": "F2"
            }
        ]
    },
    "dependencies": {
        "abl-tmlanguage": "github:chriscamicas/abl-tmlanguage",
        "glob": "^7.1.6",
        "jsonminify": "^0.4.1",
        "minimatch": "^3.0.4",
        "rimraf": "^3.0.1",
        "util.promisify": "^1.0.1",
        "@vscode/debugadapter": "^1.51.1",
        "@vscode/debugprotocol": "^1.51.0",
        "vscode-languageclient": "^7.0.0",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^9.0.0",
        "@types/node": "^13.7.0",
        "@types/vscode": "^1.52.0",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "eslint": "^8.7.0",
        "mocha": "^9.1.3",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0",
        "ts-loader": "^7.0.5",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11"
    }
}
